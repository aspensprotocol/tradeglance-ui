FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY proxy-package.json package.json

# Install dependencies
RUN npm install

# Copy the proxy script
COPY grpc-web-proxy.js .

# Copy proto files
COPY src/proto ./src/proto

# Expose port
EXPOSE 8080

# Start the proxy
CMD ["node", "grpc-web-proxy.js"] 